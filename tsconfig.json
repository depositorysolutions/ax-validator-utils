{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS", // Avoid ESM issues
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "dist"
    },
    "include": ["./**/*.ts"]
}